rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Artisan documents (IDs, certifications, etc.)
    match /artisan-documents/{userId}/{filename} {
      // Only the signed-in user (or admins) can upload their own documents
      allow create: if isAuthenticated()
                    && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      
      // Allow the uploading artisan to read their own files; admins can read everything
      allow read: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();
      
      // Allow artisans to delete their own files, admins can delete any
      allow delete: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Job attachments
    match /jobs/{jobId}/{filename} {
      // Allow authenticated users to upload job files
      allow create: if isAuthenticated() && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      
      // Allow job participants and admins to read
      allow read: if isAuthenticated() || isAdmin();
      
      // Allow job owner and admins to delete
      allow delete: if isAuthenticated() || isAdmin();
    }
    
    // Profile pictures
    match /profiles/{userId}/{filename} {
      // Users can upload their own profile pictures
      allow create, update: if isAuthenticated() && 
                              request.auth.uid == userId && 
                              request.resource.size < 5 * 1024 * 1024; // 5MB limit
      
      // Anyone can read profile pictures
      allow read: if true;
      
      // Users can delete their own profile pictures, admins can delete any
      allow delete: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();
    }
    
    // Admin uploads
    match /admin/{allPaths=**} {
      // Only admins can upload to admin folder
      allow create, update: if isAdmin();
      
      // Anyone authenticated can read admin files
      allow read: if isAuthenticated();
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

