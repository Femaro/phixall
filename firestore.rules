rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user profile data safely
    function getUserProfileData() {
      let profileDoc = get(/databases/$(database)/documents/profiles/$(request.auth.uid));
      return profileDoc != null ? profileDoc.data : null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             getUserProfileData() != null &&
             getUserProfileData().role == 'admin';
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is client
    function isClient() {
      return isAuthenticated() && 
             getUserProfileData() != null &&
             getUserProfileData().role == 'client';
    }
    
    // Helper function to check if user is Phixer (supports both 'Phixer' and legacy 'artisan' for backward compatibility)
    function isPhixer() {
      let profileData = getUserProfileData();
      return isAuthenticated() && 
             profileData != null &&
             (profileData.role == 'Phixer' ||
              profileData.role == 'artisan' ||
              profileData.role == 'phixer');
    }
    
    // Profiles collection
    match /profiles/{userId} {
      // Anyone can create their own profile during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can read their own profile, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can update their own profile (except role field)
      // Admins can update any profile including role
      allow update: if (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) 
                    || isAdmin();
      
      // Only admins can delete profiles
      allow delete: if isAdmin();
    }
    
    // Phixer Onboarding collection
    match /phixer_onboarding/{userId} {
      // Any authenticated user can create their own onboarding record
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can read and update their own onboarding, admins can access all
      allow read, update: if isAuthenticated() && 
                            (request.auth.uid == userId || 
                             get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin');
      
      // Only admins can delete onboarding records
      allow delete: if isAuthenticated() && 
                       get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Jobs collection
    match /jobs/{jobId} {
      // Clients can create jobs, admins can create on behalf of anyone
      allow create: if isClient() || isAdmin() || isOwner(request.resource.data.clientId);
      
      // Job owner (client), assigned Phixer, and admins can read
      allow read: if isAdmin() 
                  || isOwner(resource.data.clientId) 
                  || (isPhixer() && resource.data.phixerId == request.auth.uid)
                  || isPhixer(); // Allow Phixers to see available jobs
      
      // Job owner, assigned Phixer, and admins can update.
      // Phixers can claim an unassigned job if they are setting themselves as the Phixer.
      allow update: if isAdmin() 
                    || isOwner(resource.data.clientId)
                    || (isPhixer() && resource.data.phixerId == request.auth.uid)
                    || (isPhixer()
                        && (!('phixerId' in resource.data) || resource.data.phixerId == null || resource.data.phixerId == '')
                        && request.resource.data.phixerId == request.auth.uid);
      
      // Only admins and job owner can delete
      allow delete: if isAdmin() || isOwner(resource.data.clientId);
    }
    
    // Wallets collection
    match /wallets/{userId} {
      // Users can read their own wallet, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can update their own wallet, admins can update any
      allow create, update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete wallets
      allow delete: if isAdmin();
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Users can create their own transactions, admins can create any
      allow create: if isAuthenticated();
      
      // Users can read their own transactions, admins can read all
      allow read: if isAdmin() || isOwner(resource.data.userId);
      
      // Only admins can update transactions
      allow update: if isAdmin();
      
      // Only admins can delete transactions
      allow delete: if isAdmin();
    }
    
    // Phixer locations collection (for real-time tracking)
    match /phixerLocations/{phixerId} {
      // Phixers can write their own location
      allow create, update: if isOwner(phixerId) || isAdmin();
      
      // Clients with active jobs and admins can read locations
      allow read: if isAdmin() || isAuthenticated();
      
      // Only Phixers and admins can delete
      allow delete: if isOwner(phixerId) || isAdmin();
    }
    
    // Resources collection
    match /resources/{resourceId} {
      // Only admins can create resources
      allow create: if isAdmin();
      
      // Admins and authenticated users can read resources
      allow read: if isAuthenticated();
      
      // Only admins can update resources
      allow update: if isAdmin();
      
      // Only admins can delete resources
      allow delete: if isAdmin();
    }
    
    // Bills collection
    match /bills/{billId} {
      // Admins can create bills
      allow create: if isAdmin();
      
      // Bill recipient and admins can read
      allow read: if isAdmin() || isOwner(resource.data.recipientId);
      
      // Recipients can update (for approval), admins can update any
      allow update: if isAdmin() || isOwner(resource.data.recipientId);
      
      // Only admins can delete bills
      allow delete: if isAdmin();
    }
    
    // Subscriptions collection
    match /subscriptions/{subscriptionId} {
      // Clients can create subscriptions
      allow create: if isClient();
      
      // Subscription owner and admins can read
      allow read: if isAdmin() || isOwner(resource.data.clientId);
      
      // Only admins can update subscriptions (for status changes, renewals)
      allow update: if isAdmin();
      
      // Only admins can delete subscriptions
      allow delete: if isAdmin();
    }
    
    // Subscription plans collection (tier definitions)
    match /subscription_plans/{planId} {
      // Everyone can read plans
      allow read: if true;
      
      // Only admins can create/update/delete plans
      allow create, update, delete: if isAdmin();
    }
    
    // Subscription usage tracking
    match /subscription_usage/{usageId} {
      // Clients can create usage records
      allow create: if isAuthenticated();
      
      // Usage owner and admins can read
      allow read: if isAdmin() || isOwner(resource.data.clientId);
      
      // Only admins can update usage
      allow update: if isAdmin();
      
      // Only admins can delete usage records
      allow delete: if isAdmin();
    }

    // Support knowledge base articles
    match /support_articles/{articleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Support macros
    match /support_macros/{macroId} {
      allow read: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Support agent presence
    match /support_agents/{agentId} {
      allow read: if isAdmin();
      allow create, update: if isAdmin() || (isAuthenticated() && request.auth.uid == agentId);
      allow delete: if isAdmin();
    }

    // Support notifications
    match /support_notifications/{notificationId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // Support sessions
    match /support_sessions/{sessionId} {
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.role == request.resource.data.role;

      allow read: if isAdmin()
        || (isAuthenticated() && resource.data.userId == request.auth.uid)
        || (isAuthenticated() && resource.data.userId == null);

      allow update: if isAdmin()
        || (isAuthenticated() && resource.data.userId == request.auth.uid)
        || (isAuthenticated() && resource.data.userId == null);

      allow delete: if isAdmin();

      match /messages/{messageId} {
        function messageOwner() {
          return get(/databases/$(database)/documents/support_sessions/$(sessionId)).data.userId;
        }

        allow read, create: if isAdmin()
          || (isAuthenticated() && messageOwner() == request.auth.uid)
          || (isAuthenticated() && messageOwner() == null);

        allow update, delete: if isAdmin();
      }
    }

    // Job Completions collection
    match /jobCompletions/{completionId} {
      // Phixers can create completion forms for jobs they're assigned to
      allow create: if isPhixer() 
        && request.resource.data.phixerId == request.auth.uid
        && request.resource.data.status == 'pending';
      
      // Phixers can read their own completions, clients can read completions for their jobs, admins can read all
      allow read: if isAdmin() 
        || (isPhixer() && resource.data.phixerId == request.auth.uid)
        || (isClient() && resource.data.clientId == request.auth.uid);
      
      // Only admins can update completion forms (for approval/rejection)
      allow update: if isAdmin();
      
      // Only admins can delete completion forms
      allow delete: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Anyone authenticated can create notifications
      allow create: if isAuthenticated();
      
      // Users can read their own notifications, admins can read all
      allow read: if isAdmin() || isOwner(resource.data.userId);
      
      // Users can update their own notifications (mark as read), admins can update any
      allow update: if isAdmin() || isOwner(resource.data.userId);
      
      // Users can delete their own notifications, admins can delete any
      allow delete: if isAdmin() || isOwner(resource.data.userId);
    }

    // Job Locations collection (for real-time Phixer tracking)
    match /jobLocations/{jobId} {
      // Phixers can create/update location data for jobs they're assigned to
      allow create, update: if isPhixer() || isAdmin();
      
      // Clients with active jobs and admins can read locations
      allow read: if isAdmin() || isAuthenticated();
      
      // Only Phixers and admins can delete
      allow delete: if isAdmin() || isPhixer();
    }
    
    // Career Applications collection
    match /career_applications/{applicationId} {
      // Anyone can create applications (public job applications)
      allow create: if true;
      
      // Only admins can read applications
      allow read: if isAdmin();
      
      // Only admins can update/delete applications
      allow update, delete: if isAdmin();
    }
    
    // Material Recommendations collection
    match /materialRecommendations/{materialId} {
      // Phixers can create recommendations for their assigned jobs
      allow create: if isPhixer() && request.resource.data.phixerId == request.auth.uid;
      
      // Admins can read all (including queries)
      // Phixers can read materials for jobs they are assigned to (check both phixerId on material and job assignment)
      // Clients can read for their jobs
      allow read: if isAdmin() || 
        (isPhixer() && (
          // Phixer created the material
          resource.data.phixerId == request.auth.uid ||
          // OR Phixer is assigned to the job this material belongs to
          (resource.data.jobId != null && 
           exists(/databases/$(database)/documents/jobs/$(resource.data.jobId)) && 
           (get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.phixerId == request.auth.uid ||
            get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.artisanId == request.auth.uid))
        )) ||
        (isClient() && resource.data.jobId != null && 
                      exists(/databases/$(database)/documents/jobs/$(resource.data.jobId)) && 
                      get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.clientId == request.auth.uid);
      
      // Only admins can update (approve/reject)
      // Allow updates if user is authenticated and has admin role
      allow update: if isAuthenticated() && 
                      exists(/databases/$(database)/documents/profiles/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
      
      // Admins can delete any material
      // Phixers can delete their own pending materials
      allow delete: if isAdmin() ||
                      (isPhixer() && 
                       resource.data.phixerId == request.auth.uid &&
                       resource.data.status == 'pending');
    }
    
    // Material Invoices collection
    match /materialInvoices/{invoiceId} {
      // Only admins can create invoices
      allow create: if isAdmin();
      
      // Admins can read all, Clients can read their own invoices
      allow read: if isAdmin() || 
        (isClient() && resource.data.clientId == request.auth.uid);
      
      // Only admins can update invoices
      allow update: if isAdmin();
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // Job Timeline collection
    match /jobTimeline/{eventId} {
      // Admins, Phixers, and Clients can create timeline events for their jobs
      allow create: if isAdmin() || 
        (isPhixer() && request.resource.data.userId == request.auth.uid) ||
        (isClient() && request.resource.data.userId == request.auth.uid);
      
      // Admins can read all, Users can read timeline for their jobs
      allow read: if isAdmin() || 
        (isAuthenticated() && resource.data.jobId != null);
      
      // Only admins can update/delete
      allow update, delete: if isAdmin();
    }
    
    // Material Catalog collection
    match /materialCatalog/{materialId} {
      // Anyone authenticated can read active materials
      allow read: if isAuthenticated();
      
      // Only admins can create, update, or delete
      allow create, update, delete: if isAdmin();
    }
    
    // Bills collection
    match /bills/{billId} {
      // Admins can create bills
      allow create: if isAdmin();
      
      // Admins can read all bills
      // Recipients can read their own bills
      allow read: if isAdmin() || 
                   (isAuthenticated() && resource.data.recipientId == request.auth.uid);
      
      // Admins can update bills
      // Recipients can update their own pending bills (for approval)
      allow update: if isAdmin() ||
                     (isAuthenticated() && 
                      resource.data.recipientId == request.auth.uid &&
                      resource.data.status == 'pending' &&
                      request.resource.data.status == 'approved');
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // Default: deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

